<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/topImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/top_bg" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_background"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_picture" />

    <TextView
        android:id="@+id/profileTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Marshall D. Teach"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Commuter"
        android:textColor="@color/gray"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:autoLink="email"
        android:text="blackbeardPirateKing@gmail.com"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/locationicon" />

        <TextView
            android:id="@+id/profile_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cebu, Philippines"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/profile_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="+63-929-555-4642"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <Button
        android:id="@+id/buttony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/dblue"
        android:padding="12dp"
        android:text="EDIT PROFILE"
        android:textAllCaps="true"
        android:textColor="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/navbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp">

            <ImageView
                android:id="@+id/homebutton"
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:src="@drawable/home_icon" />

            <ImageView
                android:id="@+id/devbutton"
                android:layout_width="34dp"
                android:layout_height="33dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/developer_icon" />

            <ImageView
                android:id="@+id/settingbutton"
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="130dp"
                android:src="@drawable/settings_icon" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:src="@drawable/profile_icon" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
